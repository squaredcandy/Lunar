<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Splashscreen -->
    <style name="Base.Theme.Material.Lunar.Splash" parent="Theme.SplashScreen">
<!--        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>-->
        <item name="windowSplashScreenBackground">?android:attr/colorBackground</item>
        <item name="postSplashScreenTheme">@style/Theme.Material.Lunar</item>
    </style>

    <style name="Theme.Material.Lunar" parent="Base.Theme.Material.Lunar" />
    <!-- Base application theme. -->
    <style name="Base.Theme.Material.Lunar" parent="Base.Theme.Material">
        <item name="colorPrimary">@color/amber_700</item>
        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorPrimaryVariant">@color/amber_800</item>

        <item name="colorSecondary">@color/grey_800</item>
        <item name="colorOnSecondary">@color/white_50</item>
        <item name="colorSecondaryVariant">@color/grey_900</item>

        <item name="android:colorBackground">@color/white_50</item>
        <item name="colorOnBackground">@color/black_900</item>

        <item name="colorSurface">@color/white_100</item>
        <item name="colorOnSurface">@color/black_900</item>

        <item name="colorError">@color/red_600</item>
        <item name="colorOnError">@color/white_50</item>

        <item name="android:windowBackground">?android:attr/colorBackground</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.Lunar.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Lunar.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Lunar.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Lunar.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Lunar.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Lunar.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Lunar.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Lunar.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Lunar.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Lunar.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Lunar.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Lunar.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Lunar.Overline</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Lunar.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Lunar.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Lunar.LargeComponent
        </item>
    </style>

    <style name="Base.Theme.Material" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="PrivateResource">
            ?android:attr/colorBackground
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">
            ?android:attr/colorBackground
        </item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>
    </style>
</resources>